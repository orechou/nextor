{
  "$schema": "https://tauri.app/schemas/2.0/capability.json",
  "identifier": "default",
  "description": "Default capabilities for Nextor",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "shell:allow-open",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-text"
  ]
}
